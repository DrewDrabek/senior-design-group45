# Access policy detail

{
  "orgName": "example-org",
  "endpointId": "endpoint-uuid-1",
  "policyDocument": {
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "PublicReadGetObject",
        "Effect": "Allow",
        "Principal": "*",
        "Action": "s3:GetObject",
        "Resource": "arn:aws:s3:::my-s3-bucket/*"
      }
    ]
  }
}
